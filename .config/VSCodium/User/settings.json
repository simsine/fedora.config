{
	// Window
	"window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
	"window.zoomLevel": 1,
	"window.newWindowProfile": "Default",
	"window.menuBarVisibility": "compact",
	"window.commandCenter": false,

	// Terminal
    "terminal.external.linuxExec": "ptyxis",
	"terminal.integrated.defaultProfile.linux": "fish",
	"terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'CaskaydiaCove NFM Regular', 'Cascadia Mono', Consolas, monospace",
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.stickyScroll.enabled": false,
	
	// Editor
	"editor.minimap.autohide": "mouseover",
	"editor.minimap.renderCharacters": false,
	"editor.minimap.size": "fit",
	"editor.fontLigatures": true,
	"editor.fontFamily": "'FiraCode Nerd Font Mono', 'CaskaydiaCove NFM Regular', 'Cascadia Mono', Consolas, monospace",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "block",
	"editor.smoothScrolling": true,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "boundary",
	"diffEditor.ignoreTrimWhitespace": true,
	
	// Workbench
	"workbench.startupEditor": "none",
	"workbench.list.smoothScrolling": true,
	"workbench.layoutControl.type": "menu",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Adwaita Dark & Github syntax highlighting",
	"workbench.layoutControl.enabled": false,
	"workbench.navigationControl.enabled": false,
	"workbench.productIconTheme": "material-product-icons",
	
	// Other
	"files.autoSave": "afterDelay",
    "explorer.confirmDragAndDrop": false,
	"security.workspace.trust.untrustedFiles": "open",
	"explorer.confirmDelete": false,
    "chat.commandCenter.enabled": false,
	"telemetry.telemetryLevel": "error",
	"dev.containers.executeInWSL": true,

	// git settings
	"git.autofetch": true,
	"git.openRepositoryInParentFolders": "never",
	"git.blame.statusBarItem.enabled": true,
	
	// Extensions

	"svelte.enable-ts-plugin": true,

	"prettier.semi": false,
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.printWidth": 125,
	"prettier.requireConfig": true,

	"discord.detailsEditing": "Editing {dir_name}/{file_name} Line {current_line}",
	"discord.idleTimeout": 60,
	"discord.detailsIdling": "Currently Idling",
	"discord.detailsDebugging": "Debugging {file_name} Line {current_line}",

	"redhat.telemetry.enabled": false,
	"ansible.lightspeed.enabled": false,
	"[ansible]": {
		"editor.detectIndentation": true,
	},

	"haskell.manageHLS": "GHCup",

	"prisma.showPrismaDataPlatformNotification": false,

	"python.experiments.enabled": false,
	"[dockercompose]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "advanced",
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"[github-actions-workflow]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},

	"lldb.suppressUpdateNotifications": true,
}